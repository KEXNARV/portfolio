generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Hero {
  id              Int      @id @default(autoincrement())
  title           String
  subtitle        String
  description     String
  ctaPrimaryText  String   @default("View Projects")
  ctaPrimaryLink  String   @default("#projects")
  ctaSecondaryText String  @default("Contact Me")
  ctaSecondaryLink String  @default("#contact")
  backgroundType  String   @default("solid") // solid, gradient, image
  backgroundColor String   @default("#0a0a0a")
  gradientFrom    String   @default("#0a0a0a")
  gradientTo      String   @default("#1a1a2e")
  backgroundImage String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Profile {
  id          Int      @id @default(autoincrement())
  name        String
  title       String
  bio         String
  email       String
  location    String?
  avatarUrl   String?
  socialLinks Json?    // GitHub, LinkedIn, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  techStack   String[] // Array of strings: ["Next.js", "NestJS"]
  demoUrl     String?
  repoUrl     String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Skill {
  id          Int      @id @default(autoincrement())
  name        String
  category    String   // "Frontend", "Backend", "AI", "Cloud"
  level       Int      // 0-100
  icon        String?  // Nombre del icono o URL
}

model Experience {
  id          Int      @id @default(autoincrement())
  role        String
  company     String
  startDate   DateTime
  endDate     DateTime?
  description String
  current     Boolean  @default(false)
}